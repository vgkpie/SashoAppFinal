@model SashoApp.Models.Cars.CreateCarViewModel

@{
    ViewData["Title"] = "Create Car";
}

<h1>Create Car</h1>

<form asp-controller="Car" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Make"></label>
        <input type="text" class="form-control" id="Make" name="Make" required/>

    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" value="dasda"/>

    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" value="2000"/>

    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" value="dasda"/>

    </div>
    <div class="form-group">
        <label asp-for="FuelType"></label>
        <input asp-for="FuelType" class="form-control" value="dasda"/>

    </div>
    <div class="form-group">
        <label asp-for="Transmission"></label>
        <input asp-for="Transmission" class="form-control" value="dasda"/>

    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control"value="2000" />

    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>

    </div>
    <div class="form-group">
        <label asp-for="EngineType"></label>
        <input asp-for="EngineType" class="form-control" value="dasda"/>

    </div>
    <div class="form-group">
        <label asp-for="NumberOfDoors"></label>
        <input asp-for="NumberOfDoors" class="form-control" value="2"/>

    </div>
    <div class="form-group">
        <label asp-for="HorsePower"></label>
        <input asp-for="HorsePower" class="form-control" value="2000"/>

    </div>
    <div class="form-group">
        <label asp-for="ImageFile">Car Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />

    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
